<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cardItemWaste"
    android:layout_gravity="center"
    android:padding="8dp"
    app:cardElevation="2dp"
    app:cardCornerRadius="2dp"
    app:cardUseCompatPadding="true">
    <RelativeLayout
        android:id="@+id/contentItemWaste"
        android:layout_width="match_parent"
        android:padding="8dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginTop="4dp"
            android:id="@+id/circleImageWaste"
            android:foregroundGravity="center"
            android:layout_centerVertical="true"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <TextView
            android:id="@+id/titleItemWaste"
            android:layout_toRightOf="@id/circleImageWaste"
            android:paddingLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxEms="7"
            android:maxLines="2"
            android:textSize="18sp"
            android:text="浪费名称"/>
        <TextView
            android:id="@+id/createTimeItemWaste"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_alignParentRight="true"
            android:text="创建时间"/>
        <TextView
            android:id="@+id/weightItemWaste"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/titleItemWaste"
            android:paddingLeft="8dp"
            android:layout_alignLeft="@id/titleItemWaste"
            android:text="浪费值"/>
        <TextView
            android:id="@+id/showWeightItemWaste"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@id/weightItemWaste"
            android:text="值"/>
        <TextView
            android:id="@+id/todoRemark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/weightItemWaste"
            android:layout_alignStart="@+id/weightItemWaste"
            android:paddingLeft="8dp"
            android:paddingTop="3dp"
            android:text="任务备注"
            android:layout_alignLeft="@+id/weightItemWaste" />
        <android.support.v7.widget.SwitchCompat
            android:id="@+id/wasteSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/showWeightItemWaste"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" />
        <ViewStub
            android:id="@+id/wasteRemarkView"
            android:layout_below="@id/wasteSwitch"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="0dp"
            android:layout_marginStart="67dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout="@layout/waste_remark"
            android:layout_marginLeft="100dp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>